<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProducto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/translucent"
        android:layout_marginVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvNombreProd"
        />

    <TextView
        android:id="@+id/tvNombreProd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="20dp"
        android:text="Nombre Producto"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@id/ivProducto"
        app:layout_constraintLeft_toRightOf="@id/ivProducto"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvDescrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion del producto"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/ivProducto"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreProd"

        />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio $$$"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/ivProducto"
        app:layout_constraintTop_toBottomOf="@+id/tvDescrip"

        />



</androidx.constraintlayout.widget.ConstraintLayout>